
<body>
<p id="notice"><%= notice %></p>

<table id="head">
  <thead>
  <tr>
    <td><b>Link Aggregator</b></td>
    <td><%= link_to 'New Link', new_link_path %></td>
  </tr>
</thead>
</table>

<table id="link">
  <tbody>
    <% @links.each_with_index do |link,i| %>
      <tr>
        <td><%= i+1 %>.</td>
        <td><%= link_to link.title, link.url, target:'_blank' %></td>
        <td><%= link.count %></td>
        <td><%= link.username %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</body>

